{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noLib": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "incremental": false,
    "lib": ["dom", "esnext"],
    "types": ["vite/client", "node"],
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "plugins/**/*.ts",
    "vite.config.ts",
  ],
}
